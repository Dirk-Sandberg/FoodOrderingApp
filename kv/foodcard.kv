
<FoodCard@Test>:
    source: ""
    title: ""
    description: ""
    cost: 8.99
    on_release:
        app.add_to_cart(root.title, root.source, root.cost)
    FloatLayout:
        size: root.size
        pos: root.pos
        MDCard:
            size: root.size
            pos: root.pos
            orientation: 'vertical'
            Image:
                source: root.source
                pos_hint: {"center_x": .5, "center_y": .5}
                #size_hint: 1, None
                #height: root.height - tb.height - label.height - button.height
                allow_stretch: True
                keep_ratio: False
        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 1,1,1,.8
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: self.minimum_height
            pos: root.pos[0], root.pos[1]
            padding: dp(15), dp(0), dp(15), dp(0)
            MDLabel:
                id: label
                height: self.texture_size[1] + dp(15)
                size_hint_y: None
                text: root.description
                color: 0,0,0,1
