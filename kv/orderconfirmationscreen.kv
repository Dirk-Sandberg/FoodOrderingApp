<OrderConfirmationScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        Image:
            source: "images/success.png"
            pos_hint: {"center_x": .5}
            size_hint_x: .75
        MDLabel:
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            text: "Your order was received and will be ready for pickup at 7:46 p.m."
        MDRaisedButton:
            text: "Back to menu"
            pos_hint: {"center_x": .5}
            on_release:
                app.root.ids.screen_manager.change_screen("menu_screen")
