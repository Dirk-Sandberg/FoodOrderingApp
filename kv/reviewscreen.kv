##:include kv/side.kv
##:include kv/drink.kv

<RemoveCardLeftIconButton@ILeftBodyTouch+MDIconButton>:
    icon: "cart-remove"

<PriceTotal@IRightBody+MDLabel>:
    text: "nothing"



<ReviewCard>:
    orientation: 'vertical'
    name: ""
    cost: 0.0
    side: ""
    drink: ""
    size_hint_y: None
    height: line.height
    TwoLineAvatarIconListItem:
        id: line
        text: root.name
        secondary_text: root.side + root.drink
        #on_release:
        #    print(root.height, line.height, root.parent.height)
        RemoveCardLeftIconButton:
            on_release:
                app.root.ids.order_screen.remove_meal(root.name)
                root.parent.remove_widget(root)
        PriceTotal:
            text: str(root.cost)

<ReviewScreen@Screen>:
    on_pre_enter:
        total.text = "0.0"
        self.set_fields()
        self.animate_fab()

    on_leave:
        if self.a: self.a.cancel(fab2)
        self.remove_cards()
    FloatLayout:
        BoxLayout:
            padding: dp(20)
            spacing: dp(20)
            orientation: 'vertical'
            size_hint_y: None
            height: root.height - fab.top
            y: fab.top
            MDLabel:
                text: "Review your order"
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'center'
            ScrollView:
                do_scroll_x: False
                MDList:
                    spacing: dp(20)
                    padding: dp(20)
                    id: card_list
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)
                orientation: 'vertical'
                MDSeparator:
                BoxLayout:
                    size_hint_y: None
                    height: total.height
                    MDLabel:
                        height: self.texture_size[1]
                        size_hint_y: None
                        text: "Total"
                        halign: "left"

                    MDLabel:
                        id: total
                        height: self.texture_size[1]
                        size_hint_y: None
                        text: "0.0"
                        halign: "right"
            BoxLayout:
                height: self.minimum_height
                size_hint_y: None
                MDLabel:
                    height: select_location_button.height
                    size_hint_y: None
                    text: "Pickup Location: "
                MDTextButton:
                    id: select_location_button
                    markup: True
                    text: "[u]Select Location[/u]" if not root.location else "[u]"+root.location+"[/u]"
                    on_release:
                        root.display_choose_location_menu()
        MDFloatingActionButton:
            id: fab
            pos: dp(15), dp(15)
            icon: 'arrow-left'
            on_release:
                root.manager.parent.parent.prev_screen()
        MDFloatingActionButton:
            id: fab2
            pos: root.width - self.width - dp(15), dp(15)
            icon: 'check'
            on_release:
                root.manager.parent.parent.next_screen()
